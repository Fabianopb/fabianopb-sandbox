{
  "name": "fabianopb-sandbox-pern",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start-client": "vite",
    "start-server": "APP_ENV=development nodemon -r dotenv/config --exec ts-node server/index.ts",
    "start": "concurrently \"yarn start-server\" \"yarn start-client\"",
    "build-client": "tsc && vite build",
    "build-server": "tsc server/index.ts --esModuleInterop true --outDir dist",
    "build": "yarn build-client && yarn build-server && yarn migrate-latest",
    "preview": "vite preview",
    "serve": "node dist/index.js",
    "create-dev-db": "APP_ENV=development ts-node scripts/createDb.ts",
    "migrate-make": "knex --knexfile server/knexfile.ts migrate:make -x ts",
    "migrate-latest": "knex --knexfile server/knexfile.ts migrate:latest",
    "migrate-rollback": "knex --knexfile server/knexfile.ts migrate:rollback"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.0.10",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "knex": "^2.2.0",
    "pg": "^8.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  }
}
